<?xml version="1.0" encoding="utf-8"?>
<!--
  Glass Thermal Imaging Layout
  Optimized for Google Glass 640x360 prism display
  -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    tools:context="com.serenegiant.usbcameratest3.MainActivity"
    tools:ignore="MergeRootFrame">

    <!-- UVC Camera View for thermal display -->
    <com.serenegiant.widget.UVCCameraTextureView
        android:id="@+id/UVCCameraTextureView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff000000" />

    <!-- Status text overlay -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="8dp"
        android:text="Glass Thermal Imaging Ready"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="#80000000"
        android:padding="4dp"
        android:gravity="center" />

    <!-- Temperature display overlay -->
    <TextView
        android:id="@+id/temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Center: 25.0Â°C"
        android:textColor="#ffff00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#80000000"
        android:padding="8dp"
        android:visibility="gone" />

    <!-- Thermal overlay for false color display -->
    <ImageView
        android:id="@+id/thermal_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="matrix"
        android:alpha="0.7"
        android:visibility="gone" />

</FrameLayout>
